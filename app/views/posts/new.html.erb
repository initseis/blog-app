<section class="add-post-section">
  <% flash.each do |type, msg| %>
    <% if type == 'notice' %>
      <div class="flash-notice">
        <%= msg %>
      </div>
    <% end %>
    <% if type == 'error' %>
      <div class="flash-error">
        <%= msg %>
      </div>
    <% end %>
  <% end %>
  <%= form_with model: @post, url: user_create_post_path, method: :post, class: 'add-post-form' do |form| %>
    <h2>Add Post: </h2>
    <br>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title, :required => true %>
    </div>
    <br>
    <div>
      <%= form.label :text %><br>
      <%= form.text_field :text, :required => true %>
    </div>
    <br>
    <div>
      <%= form.submit "Add post" %>
    </div>
  <% end %>
</section>
