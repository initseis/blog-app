<section class="add-comment-section">
  <% flash.each do |type, msg| %>
    <% if type == 'notice' %>
      <div class="flash-notice">
        <%= msg %>
      </div>
    <% end %>
    <% if type == 'error' %>
      <div class="flash-error">
        <%= msg %>
      </div>
    <% end %>
  <% end %>
  <%= form_with model: @comment, url: user_create_post_comment_path, method: :post, class: 'add-comment-form' do |form| %>
    <h2>Add Comment: </h2>
    <br>
    <div>
      <%= form.label :text, "Comment:" %><br>
      <%= form.text_field :text, :required => true %>
    </div>
    <br>
    <div>
      <%= form.submit "Add comment" %>
    </div>
  <% end %>
</section>
